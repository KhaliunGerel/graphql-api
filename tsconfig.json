{
  "compilerOptions": {
    "target": "ES2020",                        
    "module": "CommonJS",                      
    "rootDir": "src",                          
    "outDir": "dist",                          
    "strict": true,                            
    "esModuleInterop": true,                   
    "moduleResolution": "node",                
    "resolveJsonModule": true,                 
    "skipLibCheck": true,                      
    "forceConsistentCasingInFileNames": true   
  },
  "include": ["src", "src/generated"],
  "exclude": ["node_modules", "dist"]
}
